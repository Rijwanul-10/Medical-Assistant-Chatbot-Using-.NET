@{
    ViewData["Title"] = "Doctor Koi?";
}

<style>
    * {
        box-sizing: border-box;
    }
    
    body {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 25%, #f093fb 50%, #4facfe 75%, #00f2fe 100%);
        background-size: 400% 400%;
        animation: gradientShift 15s ease infinite;
        min-height: 100vh;
        padding: 20px 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    
    @@keyframes gradientShift {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
    }
    
    .chatbot-container {
        max-width: 900px;
        margin: 0 auto;
        padding: 20px;
        animation: fadeInUp 0.6s ease-out;
    }
    
    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    .chat-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: 25px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        overflow: hidden;
        border: 1px solid rgba(255, 255, 255, 0.3);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    
    .chat-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 25px 70px rgba(0, 0, 0, 0.35);
    }
    
    .chat-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 25px 30px;
        text-align: center;
        position: relative;
        overflow: hidden;
    }
    
    .chat-header::before {
        content: '';
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
        animation: pulse 3s ease-in-out infinite;
    }
    
    @@keyframes pulse {
        0%, 100% { transform: scale(1); opacity: 0.5; }
        50% { transform: scale(1.1); opacity: 0.8; }
    }
    
    .chat-header h3 {
        margin: 0;
        font-size: 2rem;
        font-weight: 700;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
        position: relative;
        z-index: 1;
        letter-spacing: 1px;
    }
    
    .chat-header p {
        margin: 8px 0 0 0;
        font-size: 1rem;
        opacity: 0.95;
        position: relative;
        z-index: 1;
        font-weight: 300;
    }
    
    .auth-buttons {
        position: fixed;
        top: 20px;
        right: 20px;
        z-index: 1000;
        display: flex;
        gap: 10px;
    }
    
    .auth-btn {
        padding: 10px 20px;
        border: none;
        border-radius: 25px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        font-size: 0.9rem;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    }
    
    .auth-btn.login {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }
    
    .auth-btn.register {
        background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
        color: white;
    }
    
    .auth-btn.logout {
        background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
        color: white;
    }
    
    .auth-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.3);
    }
    
    .user-info {
        position: fixed;
        top: 20px;
        right: 20px;
        z-index: 1000;
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        padding: 15px 20px;
        border-radius: 15px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        display: flex;
        align-items: center;
        gap: 15px;
    }
    
    .user-info span {
        font-weight: 600;
        color: #667eea;
    }
    
    .modal {
        display: none;
        position: fixed;
        z-index: 2000;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        backdrop-filter: blur(5px);
    }
    
    .modal.show {
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .modal-content {
        background: white;
        border-radius: 20px;
        padding: 30px;
        max-width: 450px;
        width: 90%;
        max-height: 90vh;
        overflow-y: auto;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        animation: slideDown 0.3s ease-out;
    }
    
    @@keyframes slideDown {
        from {
            opacity: 0;
            transform: translateY(-50px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    .modal-header {
        text-align: center;
        margin-bottom: 25px;
    }
    
    .modal-header h2 {
        margin: 0;
        color: #667eea;
        font-size: 1.8rem;
    }
    
    .form-group {
        margin-bottom: 20px;
    }
    
    .form-group label {
        display: block;
        margin-bottom: 8px;
        color: #555;
        font-weight: 600;
    }
    
    .form-group input {
        width: 100%;
        padding: 12px 15px;
        border: 2px solid #e0e0e0;
        border-radius: 10px;
        font-size: 1rem;
        transition: border-color 0.3s ease;
    }
    
    .form-group input:focus {
        outline: none;
        border-color: #667eea;
    }
    
    .modal-btn {
        width: 100%;
        padding: 12px;
        border: none;
        border-radius: 10px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        margin-top: 10px;
    }
    
    .modal-btn.primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }
    
    .modal-btn.secondary {
        background: #f0f0f0;
        color: #666;
    }
    
    .modal-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    }
    
    .close-modal {
        position: absolute;
        top: 15px;
        right: 15px;
        background: none;
        border: none;
        font-size: 1.5rem;
        cursor: pointer;
        color: #999;
    }
    
    .close-modal:hover {
        color: #333;
    }
    
    .error-message {
        color: #ff6b6b;
        font-size: 0.9rem;
        margin-top: 10px;
        padding: 10px;
        background: #ffe0e0;
        border-radius: 8px;
        border-left: 4px solid #ff6b6b;
        display: none;
    }
    
    .success-message {
        color: #11998e;
        font-size: 0.9rem;
        margin-top: 10px;
        padding: 10px;
        background: #e0fff0;
        border-radius: 8px;
        border-left: 4px solid #38ef7d;
        display: none;
        font-weight: 600;
    }
    
    .chat-header .icon {
        font-size: 2.5rem;
        margin-bottom: 10px;
        display: block;
        animation: heartbeat 2s ease-in-out infinite;
        position: relative;
        z-index: 1;
    }
    
    @@keyframes heartbeat {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.1); }
    }
    
    .chat-messages {
        height: 550px;
        overflow-y: auto;
        padding: 25px;
        background: linear-gradient(to bottom, #f8f9ff 0%, #ffffff 100%);
        scroll-behavior: smooth;
    }
    
    .chat-messages::-webkit-scrollbar {
        width: 8px;
    }
    
    .chat-messages::-webkit-scrollbar-track {
        background: #f1f1f1;
        border-radius: 10px;
    }
    
    .chat-messages::-webkit-scrollbar-thumb {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 10px;
    }
    
    .chat-messages::-webkit-scrollbar-thumb:hover {
        background: linear-gradient(135deg, #764ba2 0%, #667eea 100%);
    }
    
    .welcome-message {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 20px 25px;
        border-radius: 20px;
        margin-bottom: 20px;
        box-shadow: 0 8px 20px rgba(102, 126, 234, 0.3);
        animation: slideInLeft 0.5s ease-out;
        border-left: 5px solid rgba(255, 255, 255, 0.5);
    }
    
    @@keyframes slideInLeft {
        from {
            opacity: 0;
            transform: translateX(-30px);
        }
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }
    
    .user-message {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 15px 20px;
        border-radius: 20px 20px 5px 20px;
        margin: 15px 0 15px 25%;
        text-align: right;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
        animation: slideInRight 0.4s ease-out;
        word-wrap: break-word;
        position: relative;
    }
    
    .user-message::after {
        content: '';
        position: absolute;
        right: -8px;
        bottom: 10px;
        width: 0;
        height: 0;
        border: 8px solid transparent;
        border-left-color: #764ba2;
        border-right: none;
    }
    
    @@keyframes slideInRight {
        from {
            opacity: 0;
            transform: translateX(30px);
        }
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }
    
    .bot-message {
        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        color: #333;
        padding: 15px 20px;
        border-radius: 20px 20px 20px 5px;
        margin: 15px 25% 15px 0;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        animation: slideInLeft 0.4s ease-out;
        word-wrap: break-word;
        position: relative;
        border-left: 4px solid #667eea;
    }
    
    .bot-message::before {
        content: '';
        position: absolute;
        left: -8px;
        bottom: 10px;
        width: 0;
        height: 0;
        border: 8px solid transparent;
        border-right-color: #c3cfe2;
        border-left: none;
    }
    
    .chat-footer {
        background: white;
        padding: 20px 25px;
        border-top: 1px solid rgba(102, 126, 234, 0.1);
    }
    
    .input-group {
        display: flex;
        gap: 12px;
        align-items: center;
    }
    
    .message-input {
        flex: 1;
        padding: 15px 20px;
        border: 2px solid #e0e0e0;
        border-radius: 25px;
        font-size: 1rem;
        transition: all 0.3s ease;
        background: #f8f9ff;
        outline: none;
    }
    
    .message-input:focus {
        border-color: #667eea;
        background: white;
        box-shadow: 0 0 0 4px rgba(102, 126, 234, 0.1);
        transform: translateY(-2px);
    }
    
    .send-button {
        padding: 15px 35px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        border-radius: 25px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
        display: flex;
        align-items: center;
        gap: 8px;
        position: relative;
        overflow: hidden;
    }
    
    .send-button::before {
        content: '';
        position: absolute;
        top: 50%;
        left: 50%;
        width: 0;
        height: 0;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.3);
        transform: translate(-50%, -50%);
        transition: width 0.6s, height 0.6s;
    }
    
    .send-button:hover::before {
        width: 300px;
        height: 300px;
    }
    
    .send-button:hover {
        transform: translateY(-3px) scale(1.05);
        box-shadow: 0 8px 25px rgba(102, 126, 234, 0.5);
    }
    
    .send-button:active {
        transform: translateY(-1px) scale(1.02);
    }
    
    .send-button:disabled {
        opacity: 0.6;
        cursor: not-allowed;
        transform: none;
    }
    
    .send-button i {
        transition: transform 0.3s ease;
    }
    
    .send-button:hover i {
        transform: translateX(3px);
    }
    
    /* History Side Panel */
    .history-panel {
        position: fixed;
        top: 0;
        right: -400px;
        width: 400px;
        height: 100vh;
        background: rgba(255, 255, 255, 0.98);
        backdrop-filter: blur(10px);
        box-shadow: -5px 0 20px rgba(0, 0, 0, 0.2);
        transition: right 0.3s ease;
        z-index: 1000;
        display: flex;
        flex-direction: column;
    }
    
    .history-panel.open {
        right: 0;
    }
    
    .history-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    
    .history-header h3 {
        margin: 0;
        font-size: 1.3rem;
    }
    
    .history-close {
        background: none;
        border: none;
        color: white;
        font-size: 1.5rem;
        cursor: pointer;
        padding: 5px 10px;
        border-radius: 5px;
        transition: background 0.3s;
    }
    
    .history-close:hover {
        background: rgba(255, 255, 255, 0.2);
    }
    
    .history-content {
        flex: 1;
        overflow-y: auto;
        padding: 20px;
    }
    
    .history-item {
        margin-bottom: 15px;
        padding: 12px;
        border-radius: 10px;
        background: #f5f5f5;
        border-left: 3px solid #667eea;
    }
    
    .history-item.user {
        background: #e3f2fd;
        border-left-color: #2196f3;
        margin-left: 20px;
    }
    
    .history-item.bot {
        background: #f1f8e9;
        border-left-color: #8bc34a;
        margin-right: 20px;
    }
    
    .history-message {
        margin: 0;
        font-size: 0.9rem;
        line-height: 1.5;
        color: #333;
    }
    
    .history-time {
        font-size: 0.75rem;
        color: #666;
        margin-top: 5px;
    }
    
    .history-empty {
        text-align: center;
        padding: 40px 20px;
        color: #999;
    }
    
    .history-loading {
        text-align: center;
        padding: 20px;
        color: #667eea;
    }
    
    .history-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.3);
        z-index: 999;
        display: none;
        transition: opacity 0.3s;
    }
    
    .history-overlay.show {
        display: block;
    }
    
    @@media (max-width: 768px) {
        .history-panel {
            width: 100%;
            right: -100%;
        }
        
        .user-message {
            margin-left: 10%;
        }
        
        .bot-message {
            margin-right: 10%;
        }
        
        .chat-header h3 {
            font-size: 1.5rem;
        }
        
        .chat-messages {
            height: 400px;
        }
    }
</style>

<!-- Login/Register Buttons -->
<div id="authButtons" class="auth-buttons">
    <button class="auth-btn login" onclick="showLoginModal()">Login</button>
    <button class="auth-btn register" onclick="showRegisterModal()">Register</button>
</div>

<!-- User Info (shown when logged in) -->
<div id="userInfo" class="user-info" style="display: none;">
    <span id="userNameDisplay"></span>
    <button class="auth-btn history" onclick="toggleHistoryPanel()" title="View Chat History">üìú History</button>
    <button class="auth-btn logout" onclick="handleLogout()">Logout</button>
</div>

<!-- History Side Panel -->
<div id="historyOverlay" class="history-overlay" onclick="toggleHistoryPanel()"></div>
<div id="historyPanel" class="history-panel">
    <div class="history-header">
        <h3>üìú Chat History</h3>
        <button class="history-close" onclick="toggleHistoryPanel()">&times;</button>
    </div>
    <div id="historyContent" class="history-content">
        <div class="history-loading">Loading history...</div>
    </div>
</div>

<!-- Login Modal -->
<div id="loginModal" class="modal">
    <div class="modal-content">
        <button class="close-modal" onclick="closeLoginModal()">&times;</button>
        <div class="modal-header">
            <h2>Login</h2>
        </div>
        <form id="loginForm">
            <div class="form-group">
                <label for="loginEmail">Email</label>
                <input type="email" id="loginEmail" required>
            </div>
            <div class="form-group">
                <label for="loginPassword">Password</label>
                <input type="password" id="loginPassword" required>
            </div>
            <div id="loginError" class="error-message"></div>
            <div id="loginSuccess" class="success-message"></div>
            <button type="submit" class="modal-btn primary">Login</button>
        </form>
        <button class="modal-btn secondary" onclick="closeLoginModal(); showRegisterModal();" style="margin-top: 10px;">
            Don't have an account? Register
        </button>
    </div>
</div>

<!-- Register Modal -->
<div id="registerModal" class="modal">
    <div class="modal-content">
        <button class="close-modal" onclick="closeRegisterModal()">&times;</button>
        <div class="modal-header">
            <h2>Register</h2>
        </div>
        <form id="registerForm">
            <div class="form-group">
                <label for="registerName">Name</label>
                <input type="text" id="registerName" required>
            </div>
            <div class="form-group">
                <label for="registerEmail">Email</label>
                <input type="email" id="registerEmail" required>
            </div>
            <div class="form-group">
                <label for="registerPassword">Password</label>
                <input type="password" id="registerPassword" required minlength="6">
            </div>
            <div class="form-group">
                <label for="registerConfirmPassword">Confirm Password</label>
                <input type="password" id="registerConfirmPassword" required>
            </div>
            <div class="form-group">
                <label for="registerAge">Age (Optional)</label>
                <input type="number" id="registerAge" min="1" max="120">
            </div>
            <div class="form-group">
                <label for="registerPhone">Phone (Optional)</label>
                <input type="tel" id="registerPhone">
            </div>
            <div class="form-group">
                <label for="registerAddress">Address (Optional)</label>
                <input type="text" id="registerAddress">
            </div>
            <div id="registerError" class="error-message" style="display: none;"></div>
            <div id="registerSuccess" class="success-message" style="display: none;"></div>
            <button type="submit" class="modal-btn primary">Register</button>
        </form>
        <button class="modal-btn secondary" onclick="closeRegisterModal(); showLoginModal();" style="margin-top: 10px;">
            Already have an account? Login
        </button>
    </div>
</div>

<div class="chatbot-container">
    <div class="chat-card">
        <div class="chat-header">
            <i class="fas fa-heartbeat icon"></i>
            <h3>Doctor Koi?</h3>
            <p>Your AI Health Assistant</p>
        </div>
        
        <div class="chat-messages" id="chatMessages">
            <div class="welcome-message">
                <strong>üëã Hello!</strong> I'm Doctor Koi, your AI health assistant. How can I help you today?
            </div>
        </div>
        
        <div class="chat-footer">
            <div class="input-group">
                <input type="text" 
                       id="messageInput" 
                       class="message-input" 
                       placeholder="Type your message here..."
                       autocomplete="off">
                <button type="button" 
                        id="sendButton" 
                        class="send-button">
                    <i class="fas fa-paper-plane"></i>
                    <span>Send</span>
                </button>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const input = document.getElementById('messageInput');
    const button = document.getElementById('sendButton');
    const messagesContainer = document.getElementById('chatMessages');
    
    if (!input || !button || !messagesContainer) {
        console.error('Required elements not found');
        return;
    }
    
    // Initialize MongoDB database on page load (creates database if it doesn't exist)
    async function initializeDatabase() {
        try {
            const response = await fetch('/Account/InitializeDatabase', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            });
            const result = await response.json();
            if (result.success) {
                console.log('‚úÖ MongoDB database initialized:', result.message);
            } else {
                console.warn('‚ö†Ô∏è Database initialization:', result.errors?.[0] || 'Unknown error');
            }
        } catch (error) {
            console.warn('‚ö†Ô∏è Could not initialize database (MongoDB may not be running):', error.message);
        }
    }
    
    // Initialize database in the background (non-blocking)
    initializeDatabase();
    
    // Check if redirected from payment page with success
    const urlParams = new URLSearchParams(window.location.search);
    if (urlParams.get('paymentSuccess') === 'true') {
        console.log('Payment success detected in URL, loading chat history...');
        setTimeout(() => {
            loadChatHistory();
        }, 500);
        window.history.replaceState({}, document.title, window.location.pathname);
    }
    
    function addMessage(text, isUser) {
        const div = document.createElement('div');
        div.className = isUser ? 'user-message' : 'bot-message';
        div.innerHTML = text.replace(/\n/g, '<br>');
        messagesContainer.appendChild(div);
        messagesContainer.scrollTop = messagesContainer.scrollHeight;
    }
    
    async function loadChatHistory() {
        try {
            console.log('Loading chat history...');
            const response = await fetch('/api/Chat/history');
            if (response.ok) {
                const messages = await response.json();
                console.log('Loaded messages:', messages.length);
                messagesContainer.innerHTML = '';
                if (messages.length === 0) {
                    messagesContainer.innerHTML = '<div class="welcome-message"><strong>üëã Hello!</strong> I\'m Doctor Koi, your AI health assistant. How can I help you today?</div>';
                } else {
                    messages.forEach(msg => {
                        addMessage(msg.message, msg.isFromUser);
                    });
                    messagesContainer.scrollTop = messagesContainer.scrollHeight;
                }
            } else if (response.status === 401) {
                // User not logged in - show welcome message
                console.log('User not logged in, showing welcome message');
                messagesContainer.innerHTML = '<div class="welcome-message"><strong>üëã Hello!</strong> I\'m Doctor Koi, your AI health assistant. How can I help you today?</div>';
            } else {
                console.error('Failed to load chat history:', response.status);
                messagesContainer.innerHTML = '<div class="welcome-message"><strong>üëã Hello!</strong> I\'m Doctor Koi, your AI health assistant. How can I help you today?</div>';
            }
        } catch (error) {
            console.error('Error loading chat history:', error);
            messagesContainer.innerHTML = '<div class="welcome-message"><strong>üëã Hello!</strong> I\'m Doctor Koi, your AI health assistant. How can I help you today?</div>';
        }
    }
    
    window.addEventListener('message', function(event) {
        if (event.data && event.data.type === 'payment-success') {
            console.log('Payment success message received on page load');
            setTimeout(() => {
